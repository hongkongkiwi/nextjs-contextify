{
  "name": "codebase-context-collector",
  "displayName": "Codebase Context Collector",
  "description": "Collects the entire codebase into a single file for LLM context input",
  "version": "1.0.1",
  "icon": "images/icon.jpg",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.collectCodebaseContext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.collectCodebaseContext",
        "title": "Collect Codebase Context"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "keywords": [
    "codebase",
    "context",
    "llm",
    "ai",
    "chatgpt",
    "claude",
    "next.js",
    "collector",
    "vscode-extension"
  ],
  "author": "Sergej Riemann",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "^20.14.12",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^10.7.0",
    "typescript": "^5.5.4",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "ignore": "^5.3.1"
  }
}